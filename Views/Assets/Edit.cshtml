@model AssetMgmt.Models.Asset

@{
    ViewData["Title"] = "Edit Asset";
}

<h2>Edit Asset</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label for="AssetID_Readonly" class="form-label">Asset ID</label>
        <input id="AssetID_Readonly" value="@Model.AssetID" class="form-control" readonly autocomplete="off" />
        <input type="hidden" asp-for="AssetID" />
    </div>

    <div class="mb-3">
        <label asp-for="AssetName" class="form-label"></label>
        <input asp-for="AssetName" class="form-control" autocomplete="off" />
        <span asp-validation-for="AssetName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AssetTagNumber" class="form-label"></label>
        <input asp-for="AssetTagNumber" class="form-control" autocomplete="off" />
        <span asp-validation-for="AssetTagNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" class="form-select" id="CategoryDropdown">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SubCategoryId" class="form-label">Subcategory</label>
        <select asp-for="SubCategoryId" class="form-select" id="SubCategoryDropdown">
            <option value="">-- Select Subcategory --</option>
        </select>
        <span asp-validation-for="SubCategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PurchaseDate" class="form-label"></label>
        <input asp-for="PurchaseDate" type="date" class="form-control" max="@DateTime.Today.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="PurchaseDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select">
            <option value="">-- Select Status --</option>
            <option value="Active">Active</option>
            <option value="Transferred">Transferred</option>
            <option value="Retired">Retired</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        // Load Categories
        $.getJSON('/Assets/GetCategories', function (categories) {
            $.each(categories, function (i, category) {
                $('#CategoryDropdown').append(`<option value="${category.categoryId}">${category.name}</option>`);
            });

            var existingCategoryId = '@Model.CategoryId';
            if (existingCategoryId) {
                $('#CategoryDropdown').val(existingCategoryId).trigger('change');
            }
        });

        // On category change, load subcategories
        $('#CategoryDropdown').change(function () {
            var selectedCategoryId = $(this).val();
            $('#SubCategoryDropdown').empty().append('<option value="">-- Select Subcategory --</option>');

            if (selectedCategoryId) {
                $.getJSON('/Assets/GetSubCategories', { categoryId: selectedCategoryId }, function (subCategories) {
                    $.each(subCategories, function (i, subCat) {
                        $('#SubCategoryDropdown').append(`<option value="${subCat.subCategoryId}">${subCat.name}</option>`);
                    });

                    var existingSubCategoryId = '@Model.SubCategoryId';
                    if (existingSubCategoryId) {
                        $('#SubCategoryDropdown').val(existingSubCategoryId);
                    }
                });
            }
        });
    </script>
}
