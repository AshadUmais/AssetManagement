@model AssetMgmt.Models.Asset

@{
    ViewData["Title"] = "Edit Asset";
}

<h2>Edit Asset</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Asset ID (readonly display) -->
    <div class="mb-3">
        <label for="AssetID_Readonly" class="form-label">Asset ID</label>
        <input id="AssetID_Readonly" value="@Model.AssetID" class="form-control" readonly autocomplete="off" />
        <input type="hidden" asp-for="AssetID" />
    </div>

    <!-- Asset Name -->
    <div class="mb-3">
        <label asp-for="AssetName" class="form-label"></label>
        <input asp-for="AssetName" class="form-control" autocomplete="off" value="@Model.AssetName" />
        <span asp-validation-for="AssetName" class="text-danger"></span>
    </div>

    <!-- Asset Tag Number -->
    <div class="mb-3">
        <label asp-for="AssetTagNumber" class="form-label"></label>
        <input asp-for="AssetTagNumber" class="form-control" autocomplete="off" value="@Model.AssetTagNumber" />
        <span asp-validation-for="AssetTagNumber" class="text-danger"></span>
    </div>

    <!-- Major Category -->
    <div class="mb-3">
        <label asp-for="MajorCategory" class="form-label"></label>
        <input asp-for="MajorCategory" class="form-control" autocomplete="off" value="@Model.MajorCategory" />
        <span asp-validation-for="MajorCategory" class="text-danger"></span>
    </div>

    <!-- Sub Category -->
    <div class="mb-3">
        <label asp-for="SubCategory" class="form-label"></label>
        <input asp-for="SubCategory" class="form-control" autocomplete="off" value="@Model.SubCategory" />
        <span asp-validation-for="SubCategory" class="text-danger"></span>
    </div>
    <!-- Purchase Date -->
    <div class="mb-3">
        <label asp-for="PurchaseDate" class="form-label"></label>
        <input asp-for="PurchaseDate" type="date" class="form-control" max="@DateTime.Today.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="PurchaseDate" class="text-danger"></span>
    </div>

    <!-- Status -->
    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select">
            <option value="">-- Select Status --</option>
            <option value="Active">Active</option>
            <option value="Transferred">Transferred</option>
            <option value="Retired">Retired</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <!-- Location Dropdown -->
    <div class="mb-3">
    <label for="LocationID" class="form-label">Location</label>
    <select id="LocationID" name="LocationID" class="form-select" disabled>
        <option value="">-- Select Location --</option>
        @foreach (var loc in (IEnumerable<AssetMgmt.Models.Location>)ViewBag.Locations)
        {
            if (Model.LocationID == loc.LocationID)
            {
                <text>
                <option value="@loc.LocationID" selected="selected">@($"{loc.Region} / {loc.Building} / {loc.Room}")</option></text>
            }
            else
            {
                <text>
                <option value="@loc.LocationID">@($"{loc.Region} / {loc.Building} / {loc.Room}")</option>
                </text>
            }
        }
    </select>
    <input type="hidden" asp-for="LocationID" />
    <span asp-validation-for="LocationID" class="text-danger"></span>
    </div>
    <!-- Custodian Dropdown -->
    <div class="mb-3">
        <label for="CustodianID" class="form-label">Custodian</label>
        <select id="CustodianID" name="CustodianID" class="form-select" autocomplete="off" disabled>
            <option value="">-- Select Custodian --</option>
            @foreach (var user in (IEnumerable<AssetMgmt.Models.UserMaster>)ViewBag.Users)
            {
                if (Model.CustodianID == user.UserID)
                {
                    <option value="@user.UserID" selected="selected">@user.FullName</option>
                }
                else
                {
                    <option value="@user.UserID">@user.FullName</option>
                }
            }
        </select>
        <input type="hidden" asp-for="CustodianID" />
        <span asp-validation-for="CustodianID" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
            $('#LocationID').change(function () {
                var locationId = $(this).val();

                var $custodian = $('#CustodianID');
                $custodian.empty();
                $custodian.append($('<option>', { value: '', text: '-- Select Custodian --' }));

                if (locationId) {
                    $.ajax({
                        url: '@Url.Action("GetCustodiansByLocation", "Assets")',
                        data: { locationId: locationId },
                        success: function (data) {
                            $.each(data, function (i, custodian) {
                                $custodian.append($('<option>', {
                                    value: custodian.userID,
                                    text: custodian.fullName
                                }));
                            });
                        }
                    });
                }
            });
        });
    </script>
}