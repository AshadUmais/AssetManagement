@model IEnumerable<AssetMgmt.Models.Asset>
@{
    ViewData["Title"] = "Assets";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1 class="mb-4">Assets</h1>

<div class="mb-3 d-flex justify-content-between align-items-center">
    <a asp-action="Create" class="btn" style="background-color: #218838; color: white; border:none;">
        <i class="bi bi-plus-lg"></i> Create New Asset
    </a>
    <input type="text" id="searchInput" class="form-control w-25" placeholder="Search assets..." />

</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover align-middle">
        <thead>
            <tr>
                <th scope="col" class="text-center">AssetID</th>
                <th scope="col" class="text-center">Name</th>
                <th scope="col" class="text-center">Tag</th>
                <th scope="col" class="text-center">Category</th>
                <th scope="col" class="text-center">Location</th>
                <th scope="col" class="text-center">Custodian</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody id="assetsTableBody">
            @foreach (var a in Model)
            {
                <tr scope="row">
                    <td>@a.AssetID</td>
                    <td>@a.AssetName</td>
                    <td>@a.AssetTagNumber</td>
                    <td>@a.MajorCategory / @a.SubCategory</td>
                    <td>@(a.Location != null ? $"{a.Location.Region} / {a.Location.Building} / {a.Location.Room}" : "-")</td>
                    <td>@(a.Custodian != null ? a.Custodian.FullName : "-")</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@a.AssetID" class="btn btn-sm btn-primary" title="Edit">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-action="Transfer" asp-route-id="@a.AssetID" class="btn btn-sm btn-warning mx-1" title="Transfer">
                            <i class="bi bi-arrow-left-right"></i>
                        </a>
                        <a asp-action="History" asp-route-id="@a.AssetID" class="btn btn-sm btn-info" title="History">
                            <i class="bi bi-clock-history"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {

    <script>
        window.onload = function () {
          const searchInput = document.getElementById('searchInput');
          searchInput.addEventListener('input', function () {
            const filter = this.value.toLowerCase();
            const rows = document.querySelectorAll('#assetsTableBody tr');
            rows.forEach(row => {
              const text = row.textContent.toLowerCase();
              row.style.display = text.includes(filter) ? '' : 'none';
            });
          });
        };
    </script>
}
